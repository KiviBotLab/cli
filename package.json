{
  "name": "kivibot",
  "version": "0.6.1",
  "description": "KiviBot 命令行工具",
  "repository": "KiviBotLab/cli",
  "homepage": "https://beta.kivibot.com/",
  "bin": {
    "kivi": "bin/kivi"
  },
  "prettier": "@vikiboss/prettier-config",
  "files": [
    "bin",
    "lib",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "bot",
    "cli",
    "oicq",
    "kivibot"
  ],
  "scripts": {
    "dev": "rimraf lib && tsc && concurrently \"tsc -w\" \"tsc-alias -w\"",
    "build": "rimraf lib && tsc && tsc-alias",
    "lint": "eslint . --ext .ts,js",
    "lint:fix": "eslint . --ext .ts,js --fix",
    "release": "pnpm run build && pnpm publish"
  },
  "engines": {
    "node": ">= v14"
  },
  "author": "Viki <hi@viki.moe> (https://github.com/vikiboss)",
  "license": "MIT",
  "devDependencies": {
    "@kivibot/core": "latest",
    "@types/fs-extra": "^9.0.13",
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.11.9",
    "@types/prompts": "^2.4.1",
    "@vikiboss/prettier-config": "^0.2.1",
    "concurrently": "^7.5.0",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-viki-ts": "^0.1.1",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.7.1",
    "tsc-alias": "^1.7.1",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "axios": "^1.2.1",
    "fast-glob": "^3.2.12",
    "fs-extra": "^10.1.0",
    "minimist": "^1.2.7",
    "npm-check-updates": "^16.5.0",
    "ora": "^5",
    "prompts": "^2.4.2",
    "rimraf": "^3.0.2"
  }
}
